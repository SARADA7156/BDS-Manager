<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>BDS Manager</title>
        <meta name="description" content="Webアプリの管理をする画面">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" href="/imgs/bedrock_icon.webp">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=add,backup,dashboard,finance_mode,globe,host,menu,timer" />
        <link rel="stylesheet" href="/css/style.css">
        <% if (stylesheets) { %>
            <% stylesheets.forEach(sheet => { %>
            <link rel="stylesheet" href="/css/<%= sheet %>.css">
            <% }) %>
        <% } %>
    </head>

    <body>
        <!-- ヘッダーのマークアップ -->
        <% if (typeof header !== "undefined" && header) { %>
            <header class="active">
                <div class="p-2 d-grid align-items-center header-content">
                    <%- include(`./components/${header}`) %>
                </div>
            </header>
        <% } %>

        <!-- メイン要素のマークアップ -->
        <main class="min-vh-100 container-fluid p-0">
            <% if (typeof nav !== "undefined" && nav) { %>
                <nav class="min-vh-100 bg-dark active" id="sideNav">
                    <%- include(`./components/${nav}`) %>
                </nav>
                <script type="module" src="/js/components/nav.js"></script>
            <% } %>

            <% if (typeof page !== "undefined" && page) { %>
                <%- include(`./pages/${page}`) %>
            <% } %>
        </main>

        <!-- フッターのマークアップ -->
        <% if (typeof footer !== "undefined" && footer) { %>
            <footer class="container-fluid justify-content-center d-grid">
                <%- include(`./components/${footer}`) %>
            </footer>
        <% } %>
    </body>
</html>
